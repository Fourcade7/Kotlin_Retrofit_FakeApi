<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">


    <ImageView
        android:id="@+id/imageviewopenpreview"
        android:layout_width="match_parent"
        android:scaleType="centerInside"
        android:layout_height="300dp"></ImageView>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="15dp">
       <TextView

           android:id="@+id/textviewopenpreviewname"
           android:layout_width="match_parent"
           android:text="Name"
           android:textSize="18dp"
           android:layout_height="wrap_content"></TextView>
       <TextView

           android:id="@+id/textviewopenpreviewdescription"
           android:layout_width="match_parent"
           android:text="Name"
           android:textSize="15dp"
           android:layout_height="wrap_content"></TextView>
       <RatingBar
           android:id="@+id/raitingbar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"></RatingBar>
       <TextView

           android:id="@+id/textviewopenpreviewprice"
           android:layout_width="match_parent"
           android:text="Name"
           android:textSize="15dp"
           android:layout_height="wrap_content"></TextView>
   </LinearLayout>

</LinearLayout>