<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:inputType="number"
            android:hint="Product Id"
            android:layout_toLeftOf="@+id/buttonrequestid"
            android:id="@+id/edittextproductid"
           android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"></EditText>
        <Button
            android:text="Go"
            android:id="@+id/buttonrequestid"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
    </RelativeLayout>


    <ProgressBar
        android:layout_margin="15dp"
        android:visibility="gone"
        android:id="@+id/progressbarproductwithid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ProgressBar>
    <LinearLayout
        android:id="@+id/linearlaywithid"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <ImageView
            android:id="@+id/imageviewopenpreview3"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            android:layout_height="300dp"></ImageView>
        <TextView

            android:id="@+id/textviewopenpreviewname3"
            android:layout_width="match_parent"
            android:text="Name"
            android:textSize="18dp"
            android:layout_height="wrap_content"></TextView>
        <TextView

            android:id="@+id/textviewopenpreviewdescription3"
            android:layout_width="match_parent"
            android:text="Name"
            android:textSize="15dp"
            android:layout_height="wrap_content"></TextView>
        <RatingBar
            android:id="@+id/raitingbar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></RatingBar>
        <TextView

            android:id="@+id/textviewopenpreviewprice3"
            android:layout_width="match_parent"
            android:text="Name"
            android:textSize="15dp"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

</LinearLayout>